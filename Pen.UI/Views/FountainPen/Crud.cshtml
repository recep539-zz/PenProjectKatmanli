@model Pen.UI.Models.FountainPenModel

@{
    ViewData["Title"] = "Crud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>@Model.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post">
            <div class="form-group" hidden>
                <label asp-for="FountainPen.Id" class="control-label"></label>
                <input asp-for="FountainPen.Id" class="form-control" />
                <span asp-validation-for="FountainPen.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FountainPen.FountainPenTypes" class="control-label"></label>
                <input asp-for="FountainPen.FountainPenTypes" class="form-control" />
                <span asp-validation-for="FountainPen.FountainPenTypes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Model.BtnVal" class="@Model.BtnClass" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div>
    <a class="btn btn-dark" asp-action="List">Back to List</a>
</div>
